---
import { Icon } from '@astrojs/starlight/components';
import { type StarlightIcon } from '@astrojs/starlight/types';

interface Props {
	icon: StarlightIcon;
	title: string;
	url: string;
}

const { icon, title, url } = Astro.props;
---

<a href={url} class="mmx-link-card-t">
	<span class="mmx-card-t sl-flex">
		<p class="mmx-title-t sl-flex">
			<Icon name={icon} class="mainicon" size="1.333em" />
			<span set:html={title} />
		</p>
	</span>
	<Icon name="right-arrow" size="1.333em" class="arrowicon rtl:flip" />
</a>
<style>
	.mmx-link-card-t {
		border: 2px solid var(--sl-color-gray-5);
		border-radius: 0.5rem;
		background-color: var(--sl-color-black);
		padding: 1rem clamp(1rem, calc(0.125rem + 3vw), 2rem);
		position: relative;
		display: flex;
		flex-direction: row;
		align-items: center;
	}
	.mmx-link-card-t .arrowicon {
		font-size: 1.5rem;
		margin-left: auto;
		color: var(--sl-color-gray-2);
		flex: 0 0 1em;
	}
	.mmx-link-card-t:hover {
		background: var(--sl-color-gray-7, var(--sl-color-gray-6));
		border-color: var(--sl-color-gray-2);
	}
	.mmx-link-card-t:hover .mainicon {
		color: var(--sl-color-white);
	}
	.mmx-card-t {
		display: flex;
		flex-direction: column;
	}
	.mmx-card-t .mainicon {
		border: 2px solid transparent;
		padding: 0.2em;
		border-radius: 0.25rem;
		box-sizing: content-box;
		flex: 0 0 1em;
	}
	.mmx-title-t {
		display: flex;
		font-weight: 600;
		font-size: 1.25rem;
		color: var(--sl-color-white);
		line-height: 1.2;
		gap: 1rem;
		align-items: center;
		margin-top: 0;
		margin-bottom: 0;
		margin-block-end: 0em;
	}
	a.mmx-link-card-t {
		text-decoration: none;
		line-height: 1.2;
	}
	a.mmx-link-card-t::before {
		content: '';
		position: relative;
		inset: 0;
	}
</style>
